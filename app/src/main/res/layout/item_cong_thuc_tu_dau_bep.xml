<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewCongThucTuDauBep"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    >
    <LinearLayout
        android:id="@+id/linearLayoutCongThucDauBep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/placeholder"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF0000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/txtTenDauBep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tên đầu bếp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#FF000000"
                android:textSize="15sp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/imgHinh"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/placeholder"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/txtTenCongThuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tên công thức"
            android:layout_marginTop="10dp"
            android:textColor="#FF000000"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/txtTomTat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Tóm tắt"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewHinh"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
