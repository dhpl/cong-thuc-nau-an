<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/toolbar"
        />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgChiTietCachCheBien"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/placeholder"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/colorAvatar"
                >
                <TextView
                    android:id="@+id/txtThucHien"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Thực hiện"
                    android:textColor="#FF000000"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_watch_later"
                    />
                <TextView
                    android:id="@+id/txtPhan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Phần"
                    android:textColor="#FF000000"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_room_service"
                    />
                <TextView
                    android:id="@+id/txtDoKho"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Độ khó"
                    android:textColor="#FF000000"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHUẨN BỊ"
                android:padding="10dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewChuanBi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THỰC HIỆN"
                android:padding="10dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewThucHien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>